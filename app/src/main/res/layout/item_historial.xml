<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_margin="8dp">

    <!-- Nombre del entrenamiento -->
    <TextView
        android:id="@+id/tv_nombre_entrenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Entrenamiento"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:paddingBottom="4dp" />

    <!-- Fecha del entrenamiento -->
    <TextView
        android:id="@+id/tv_fecha_entrenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha del Entrenamiento"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <!-- BotÃ³n para eliminar el entrenamiento -->
    <Button
        android:id="@+id/btn_eliminar_entrenamiento"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:text="Eliminar"
        android:backgroundTint="@color/light_blue"
        android:textColor="@android:color/white" />
</LinearLayout>
